{ 
  "manifest_version": 2,
  "name": "HN Keyword Filter",
  "version": "0.3",

  "default_locale": "en",
  "description": "Stop seeing HN stories on offending topics",
  "icons": {"16" : "hn.png"},

  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "page_action": {
	"default_icon": "hn.png",
    "default_popup": "popup.html"
  },
	"permissions": [
	"tabs",
		"webNavigation",
		"declarativeContent"
	  ],

  "author": "Shamari Feaster",

  "background": {

	"scripts": ["main.js"],
    "persistent": false
  }
}